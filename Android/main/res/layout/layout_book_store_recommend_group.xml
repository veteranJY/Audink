<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/view_recom_group_mark"
            android:layout_width="3dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="18dp"
            android:background="@color/colorPrimary"/>

        <TextView
            android:id="@+id/txt_recom_group_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_centerVertical="true"
            android:textColor="@android:color/primary_text_light"
            android:layout_toEndOf="@id/view_recom_group_mark"
            android:text="@string/recommend_group_name"
            android:textSize="@dimen/text_size_normal"/>

        <TextView
            android:id="@+id/txt_recom_group_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:drawableEnd="@drawable/ic_chevron_right_black_24dp"
            android:drawableTint="@android:color/darker_gray"
            android:focusable="true"
            android:gravity="center_vertical"
            android:text="@string/more"
            android:textSize="@dimen/text_size_normal"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linear_recom_group_contain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>
</LinearLayout>